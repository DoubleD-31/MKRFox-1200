// SigFox --> Première transmission

#include <SigFox.h>
#include <ArduinoLowPower.h>

void setup() {
 
  Serial.begin(9600);
  while (!Serial) {};

  if (!SigFox.begin()) {
    Serial.println("Carte MKRFOX non-présente !");
    return;
  }

  SigFox.debug(); 
  delay(100);



  SigFox.beginPacket();

  SigFox.print("Alerte !"); 
  Serial.println("Envoi en cours ....");

    int ret = SigFox.endPacket(); 
    
  if (ret > 0) {
    Serial.println("Pb de transmission");
  } else {
    Serial.println("Transmission ok");
  }

  SigFox.end();

Serial.println("");
Serial.println("The end.");

}

void loop()
{
}
